@model SuperDamp.Models.modelAdaptor

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>FAQ</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(obj => obj.faq.Id)
        @Html.TextAreaFor(obj => obj.faq.Question, new { @value = Model.faq.Question})
        @Html.TextAreaFor(obj => obj.faq.Answer, new { @value = Model.faq.Answer })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Admin")
</div>

@model  IEnumerable<SuperDamp.Models.Product>

@{
    ViewBag.Title = "Admin_Product";
    Layout = null;
}

<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
        <h1 class="display-4">Admin Page For PRODUCTS</h1>

    </div>
</div>

<div class="container">
    <div class="row">
        <a href="@Url.Action("create","Product")" class="btn btn-success mx-2 mb-1">Create</a>
        @if (Model.Count() > 0)
        {

            foreach (var obj in Model)
            {
                <div class="col-sm-3">
                    <div class="card mb-2">
                        <img style="width: 200px; height: 300px; margin-left: auto;margin-right: auto;" class="card-img-top img" src=@obj.imageURL alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">@obj.Name</h4>
                            <h6 class="card-subtitle mb-2 text-muted">@obj.Description</h6>
                            <p class="card-text">
                                US $ @obj.Price
                            </p>
                        </div>
                        <div class="card-footer text-center">
                            <div class=" btn-group" role="group">
                                <a href="@Url.Action("update","Product", new { id = obj.Id })" class="btn btn-success mx-2 mb-1">
                                    <i class="far fa-edit">&nbsp;<span class="text-monospace">Edit</span></i>
                                </a>
                                <a href="@Url.Action("delete","Product", new { id = obj.Id })" class="btn btn-danger mx-2 mb-1">
                                    <i class="far fa-edit">&nbsp;<span class="text-monospace">Delete</span></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>





@model  IEnumerable<SuperDamp.Models.Product>

@{
    ViewBag.Title = "Admin_Product";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Orelega+One&family=Raleway:ital,wght@1,400;1,600&display=swap" rel="stylesheet">
</head>
<body class="bg-warning">

    <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4">Admin Page For PRODUCTS</h1>

        </div>
    </div>

    <div class="container">
        <div class="row display-5 " style="font-family: 'Orelega One', cursive; color: #ff661a;">
            Create a new product HERE: <a href="@Url.Action("create","Product")" class="btn btn-success mx-4 px-3 mb-4">Create</a>
        </div>
        <div class="row">
           
            @if (Model.Count() > 0)
            {

                foreach (var obj in Model)
                {
                    <div class="col-sm-3">
                        <div class="card mb-2">
                            <img style="width: 200px; height: 300px; margin-left: auto;margin-right: auto;" class="card-img-top img" src=@obj.imageURL alt="Card image cap">
                            <div class="card-body">
                                <h4 class="card-title">@obj.Name</h4>
                                <h6 class="card-subtitle mb-2 text-muted">@obj.Description</h6>
                                <p class="card-text">
                                    US $ @obj.Price
                                </p>
                            </div>
                            <div class="card-footer text-center">
                                <div class=" btn-group" role="group">
                                    <a href="@Url.Action("update","Product", new { id = obj.Id })" class="btn btn-success mx-2 mb-1">
                                        <i class="far fa-edit">&nbsp;<span class="text-monospace">Edit</span></i>
                                    </a>
                                    <a href="@Url.Action("delete","Product", new { id = obj.Id })" class="btn btn-danger mx-2 mb-1">
                                        <i class="far fa-edit">&nbsp;<span class="text-monospace">Delete</span></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <footer class="text-center m-3">
        <span class="display-6 " style="font-family: 'Orelega One', cursive; color: #ff661a;">2021 SuperDamp</span>
    </footer>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>




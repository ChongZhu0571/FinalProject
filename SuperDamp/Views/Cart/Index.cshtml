@model SuperDamp.Models.modelAdaptor

@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1 class="display-6" style="font-family: 'Orelega One', cursive; color: #f29672;">Checkout</h1>
<h2></h2>
@using (Html.BeginForm("CartOperation","Cart",FormMethod.Post))
{
<table class="table table-bordered" width="80%">
    <tr>
        <th>
            Select
        </th>
        <th>
            Product Name
        </th>
        <th>
            Price
        </th>
        <th>
            Quantity
        </th>
        <th>
            Total
        </th>
    </tr>
    @for (var i=0;i<Model.carts.Count();i++)
    {
        int total = Model.carts[i].product.Price * Model.carts[i].quantity;
<tr>
    <td>
        @Html.CheckBoxFor(m => m.carts[i].isSelected)
        @Html.HiddenFor(m => m.carts[i].productId)
        <img class="ml-2" src=@Html.DisplayFor(m => m.carts[i].product.imageURL) width="90px" height="110px" />
    </td>

    <td>
        @Html.DisplayFor(m => m.carts[i].product.Name)
    </td>
    <td>
        $@Html.DisplayFor(m => m.carts[i].product.Price)
    </td>
    <td>
        @Html.DisplayFor(m => m.carts[i].quantity)
    </td>
    <td>
        $ @total
    </td>
</tr>}
    @if (ViewBag.blankCart != null)
    {
<h3 style="color:red">@ViewBag.blankCart</h3>}
</table>
<div class="container">
  <div class="row">
      <div class="col-7">
          <div><button name="operation" class="btn btn-danger mt-3" type="submit" value="delete">Delete</button> </div>
      </div>
      <div class="col-3">
          <button style="margin-left:56%" name="operation" type="submit" class="btn btn-default" value="chooseMore">Choose More</button>

      </div>
      <div class="col-2">
          <button name="operation" class="btn btn-success" value="checkOut">CheckOut</button>

      </div>
  </div>
</div>
               }
<div style="margin-top:20px">
</div>
